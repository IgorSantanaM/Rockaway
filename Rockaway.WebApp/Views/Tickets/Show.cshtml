@using Rockaway.WebApp.Components
@model Rockaway.WebApp.Models.ShowViewData
<h1>@Model.HeadlineArtist.Name</h1>
@if (Model.SupportActNames.Count > 0) {
	<h4>plus support: @String.Join(", ", Model.SupportActNames)</h4>
}
<p>@Model.VenueName, @Model.VenueAddress</p>
<p>@Model.ShowDate. Doors @Model.DoorsOpen</p>
<form method="post">
	@(await Html.RenderComponentAsync<TicketPicker>(RenderMode.ServerPrerendered, new { Model.TicketTypes, Model.CultureName }))
	<section class="row">
		<div class="col-12 col-md-8 offset-md-2 text-end">
			<input type="submit" class="btn btn-primary" value="Next &gt;"/>
		</div>
	</section>
</form>